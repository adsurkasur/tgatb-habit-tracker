<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Explicit purple system bars by default -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- Remove translucency so JS/native color APIs are fully respected -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Disable contrast enforcement (API 29+) to keep brand purple consistent -->
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    <!-- Ensure launch window already uses purple system bars to avoid white flash -->
    <item name="android:statusBarColor">@color/status_bar_color</item>
    <item name="android:navigationBarColor">@color/navigation_bar_color</item>
    </style>
</resources>