# Next.js Environment Variables
# Copy this file to .env.local and fill in your values

# Database Configuration (if using external database instead of local storage)
DATABASE_URL=postgresql://username:password@localhost:5432/habit_tracker

# For Neon Database (PostgreSQL)
# NEON_DATABASE_URL="postgresql://username:password@ep-xyz.region.aws.neon.tech/database?sslmode=require"

# Application Configuration
NEXT_PUBLIC_APP_NAME="TGATB Habit Tracker"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# Server Configuration (for legacy compatibility)
PORT=3000
NODE_ENV=development

# Session Secret (generate a strong random string)
SESSION_SECRET=your-session-secret-here

